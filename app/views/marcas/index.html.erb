<p id="notice"><%= notice %></p>

<h1>Marcas</h1>
<div class="col-lg-8 col-lg-offset-2">
  <table class="table">
    <thead>
      <tr>
        <th>Marca</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @marcas.each do |marca| %>
        <tr>
          <td><%= marca.marca %></td>
          <td><%= link_to 'Ver', marca %></td>
          <td><%= link_to 'Editar', edit_marca_path(marca) %></td>
          <td><%= link_to 'Borrar', marca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Nueva marca', new_marca_path %>

<br>

<a class="btn btn-lg btn-primary col-lg-offset-5" href="/admin" role="button">Volver a panel <span class="glyphicon glyphicon-backward"></span></a>
