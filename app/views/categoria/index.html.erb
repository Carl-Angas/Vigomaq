<h1>Categorias</h1>
<div class="col-lg-8 col-lg-offset-2">
  <table class="table">
    <thead>
      <tr>
        <th>Categoria</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categoria.each do |categorium| %>
        <tr>
          <td><%= categorium.categoria %></td>
          <td><%= link_to 'Ver', categorium %></td>
          <td><%= link_to 'Editar', edit_categorium_path(categorium) %></td>
          <td><%= link_to 'Borrar', categorium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
