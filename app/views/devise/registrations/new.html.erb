<div class="container" align="center">

  <h2>Registrar</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :nombre %><br />
    <%= f.text_field :nombre, autofocus: true, placeholder: :nombre %></div>

    <div><%= f.label :email %><br />
    <%= f.email_field :email, placeholder: :email %></div>

    <div><%= f.label :contraseña %> <% if @validatable %><i>(<%= @minimum_password_length %> caracteres mínimo)</i><% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: :contraseña %></div>

    <div><%= f.label "confirme contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repita contraseña" %></div>
      <br>
    
    <button class="btn btn-lg btn-primary" type="submit">Registrar</button>
  <% end %>

<%= render "devise/shared/links" %>
</div>