<p id="notice"><%= notice %></p>

<h1>Consultas realizadas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Consulta</th>
      <th>Respuesta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% if current_user.tipo != 2 %>
  <tbody>
    <% @user_query.each do |uquery| %>
      <tr>
        <td><%= uquery.nombre %></td>
        <td><%= uquery.email %></td>
        <td><%= uquery.consulta %></td>
        <td><%= uquery.respuesta %></td>
        <td><%= link_to 'Show', uquery %></td>
        <td><%= link_to 'Edit', edit_query_path(uquery) %></td>
        <td><%= link_to 'Destroy', uquery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  <% else %>
  <tbody>
    <% @queries.each do |query| %>
      <tr>
        <td><%= query.nombre %></td>
        <td><%= query.email %></td>
        <td><%= query.consulta %></td>
        <td><%= query.respuesta %></td>
        <td><%= link_to 'Show', query %></td>
        <td><%= link_to 'Edit', edit_query_path(query) %></td>
        <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>


<% end %>
</table>

<br>

<%= link_to 'New Query', new_query_path %>
