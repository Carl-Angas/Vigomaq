<!DOCTYPE html>
<html>
<head>
  <title>Vigomaq Chile</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', :defaults, 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">


</head>
<body>

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!--<a class="navbar-brand" href="/">Inicio</a>-->
      <div class="img-responsive" alt="Responsive image" align="center">
        
        <%= link_to image_tag("logo.jpg", :alt => "Logo", :title => "Logo", size: "180x50"), "/" %>
    </div>

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      
      <!--Buscador-->
      <!--<form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="¿Qué buscas?" >

        </div>
        <button type="button" class="btn btn-primary">Buscar</button>

      </form>-->
      <!-- Fin Buscador -->

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>  
          <li><a href="#">Conectado como <%= current_user.email %></a></li>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Menú <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <a href="/products"><span class="glyphicon glyphicon-tag" aria-hidden="true"></span>      Productos</a>
            </li>
            <%if user_signed_in?%>
              <li>
                <a href="/contact"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>      Contacto</a>
              </li>
            <% end -%>
            <%if current_user.tipo==2%>
              <li>
                <a href="/admin/index"><span class="glyphicon glyphicon-th" aria-hidden="true"></span>      Panel de control</a>
              </li>  
            <% end -%>
            <li class="divider"></li>
            <li><%= link_to "Desconectar", destroy_user_session_path, method: :delete %>  </li>
          </ul>
        </li>
        <% else %>  
          <li><a href="/users/sign_up">Registrar</a></li> 
          <li><a href="/users/sign_in">Iniciar sesión</a></li>
        <% end %>   
        
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


<%= yield %>

</body>
</html>


