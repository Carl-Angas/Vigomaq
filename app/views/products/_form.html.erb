<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<form class="form-inline" role="form">
  <!--<div class="field">-->
  <div class="form-group">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :modelo %>  
    <%= f.collection_select :modelo, Modelo.all, :modelo, :modelo %> 
  </div>
  <div class="field">
    <%= f.label :marca %>  
    <%= f.collection_select :marca, Marca.all, :marca, :marca %> 
  </div>
  <div class="field">
    <%= f.label :categoria %>  
    <%= f.collection_select :categoria, Categorium.all, :categoria, :categoria %> 
  </div>
  <div class="field">
    <%= f.label :tipo %>  
    <%= f.collection_select :tipo, TipoProducto.all, :tipo, :tipo %> 
  </div>
  <div class="field">
    <%= f.label :precio %>
    <%= f.number_field :precio %>
  </div>

  <div class="field">
  <%= f.label :imagen %>
  <%= f.file_field :image %>
  </div>

     

  <!--<div class="actions">-->
  <button class="btn btn-lg btn-default" type="submit">Registrar</button>
<% end %>

