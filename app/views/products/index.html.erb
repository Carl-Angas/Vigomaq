<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Nombre</th>
      <th>Modelo</th>
      <th>Marca</th>
      <th>Precio</th>
      <th>Categoria</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= product.nombre %></td>
        <td><%= product.modelo %></td>
        <td><%= product.marca %></td>
        <td><%= product.precio %></td>
        <td><%= product.categoria %></td>
        <td><%= product.tipo %></td>
        <td><%= link_to 'Ver detalles', product %></td>
        <% if user_signed_in? %>
            <% if current_user.tipo == 2 %>  
              <td><%= link_to 'Editar', edit_product_path(product) %></td>
              <td><%= link_to 'Borrar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>  
            <<% end %>
        <% end %> 

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <% if current_user.tipo == 2 %> 
    <%= link_to 'Agregar nuevo producto', new_product_path %>
    <% else %>  
  <% end %>
<% end %> 

