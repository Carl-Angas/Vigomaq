<p id="notice"><%= notice %></p>

<h1>Productos registrados</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Nombre</th>
      <th>Modelo</th>
      <th>Marca</th>
      <th>Precio</th>
      <th>Categoria</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= product.nombre %></td>
        <td><%= product.modelo %></td>
        <td><%= product.marca %></td>
        <td><%= product.precio %></td>
        <td><%= product.categoria %></td>
        <td><%= product.tipo %></td>
        <td><%= link_to 'Ver detalles', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Borrar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

